<?eclipse.ant.import?>

<project basedir="." default="core" name="pikater-core">
    <target depends="init" name="core" description="build pikater without the GUI not depending on ivy JARs">
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" includeantruntime="false" source="${source}" target="${target}">
            <src path="src"/>
            <exclude name="org/pikater/web/"/>
            <exclude name="net/"/>
            <exclude name="org/pikater/shared/ssh/"/>
            <exclude name="org/pikater/shared/AppHelper.java"/>
            <exclude name="org/pikater/shared/XStreamHelper.java"/>
            <classpath refid="pikater.classpath"/>
        </javac>
    </target>
</project>
