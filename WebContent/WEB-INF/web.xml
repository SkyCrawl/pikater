<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  
  <display-name>Pikater</display-name>
  
  <context-param>
  	<description>Special parameter for filters. Print various debug messages or not?</description>
  	<param-name>printDebugInfoInFilters</param-name>
 	<param-value>false</param-value>
  </context-param>
  <context-param>
    <description>Production mode of the whole application - overrides any eventual annotation settings. Used in filters.</description>
    <param-name>productionMode</param-name>
    <param-value>false</param-value>
  </context-param>
  <context-param>
    <description>Heartbeat request interval (in seconds) for Vaadin client side engine.</description>
    <param-name>heartbeatInterval</param-name>
    <param-value>300</param-value>
  </context-param>
  
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  
  <!-- THE FOLLOWING FILTER MAPPING LIST ALSO SPECIFIES THE ORDER OF THEIR EXECUTION -->
  <filter-mapping>
    <filter-name>filter1</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
</web-app>